<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inscription"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp">
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="5000dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:src="@drawable/register" />
        <TextView
            android:id="@+id/profileLibelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/profileImage"
            android:fontFamily="@font/bungee"
            android:textColor="@color/black"
            android:text="Failed"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/nom"

        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/edittext"
        android:drawablePadding="20dp"
        android:hint="Nom complet"
        android:drawableLeft="@drawable/ic_baseline_perm_identity_24"

        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/black"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/email"
        android:layout_below="@id/nom"
        android:background="@drawable/edittext"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_baseline_credit_card_24_black"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="10dp"

        android:drawablePadding="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:background="@drawable/edittext"
        android:hint="Mot de passe"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawablePadding="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/empreinte"
        android:layout_below="@id/password"
        android:background="@drawable/edittext"
        android:hint="Empreinte"
        android:drawableLeft="@drawable/ic_baseline_fingerprint_24"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawablePadding="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerbtn"
        android:layout_below="@id/empreinte"
        android:text="  S'inscrire"
        android:drawableLeft="@drawable/ic_baseline_person_add_alt_1_24"

        android:backgroundTint="#87CEEB"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:padding="14dp"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addVoteFragment"
    android:background="@drawable/back2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questionlabel"
        android:text="Questionnaire"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:layout_below="@id/questionlabel"
        android:background="#30ffffff"
        android:hint="question"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="0dp"
        android:padding="20dp"

        android:drawablePadding="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pickdatebtn"
        android:layout_below="@id/question"
        android:text="Date fin"
        android:background="#30ffffff"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:padding="20dp"

        android:drawablePadding="20dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jj"
        android:layout_below="@id/pickdatebtn"
        android:text="Reponces possibles"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:layout_below="@id/jj"
        android:background="#30ffffff"
        android:hint="reponce 1"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="12dp"

        android:drawablePadding="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r2"
        android:layout_below="@id/r1"
        android:background="#30ffffff"
        android:hint="reponce 2 "
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="12dp"

        android:drawablePadding="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r3"
        android:layout_below="@id/r2"
        android:background="#30ffffff"
        android:hint="reponce 3"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="12dp"

        android:drawablePadding="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r4"
        android:layout_below="@id/r3"
        android:background="#30ffffff"
        android:hint="reponce 4"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="12dp"

        android:drawablePadding="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r5"
        android:layout_below="@id/r4"
        android:background="#30ffffff"
        android:hint="reponce 5"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="12dp"

        android:drawablePadding="20dp"/>



    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publierbtn"
        android:layout_below="@id/r5"
        android:text="Publier"
        android:backgroundTint="@color/design_default_color_secondary"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />

</RelativeLayout>